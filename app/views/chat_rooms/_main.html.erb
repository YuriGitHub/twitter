
<link rel="stylesheet" href="/assets/chat.css"/>

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.nicescroll/3.6.8-fix/jquery.nicescroll.min.js"></script>
<div class="content container-fluid bootstrap snippets">
      <div class="row row-broken">
        <div class="col-sm-3 col-xs-12">
          <div class="col-inside-lg decor-default chat" style="overflow: hidden; outline: none;" tabindex="5000">
            <div class="chat-users">
              <h6 id="users_list">Chat Rooms <span class="glyphicon glyphicon-plus chat-room-icon" data-toggle="modal" data-target="#myModal" id="add-chat-room"></span></h6>

            </div>
          </div>
        </div>
        <div class="col-sm-9 col-xs-12 chat" style="overflow: hidden; outline: none;" tabindex="5001" id="scroll">
          <div class="col-inside-lg decor-default" >
            <div class="chat-body" >
              <h6 >Mini Chat</h6>
              <div id="messages_for_del" >

              </div>
              <div id="insert_message" class="chat-body">

              </div>
              <div class="answer-add">
                <input placeholder="Write a message" id="text_value">
                <span class="answer-btn answer-btn-1 unsubscribed"></span>
                <span class="answer-btn answer-btn-2"></span>
              </div>
            </div>
          </div>
        </div>
      </div>
        <%= render 'add_chat_room' %>
      
