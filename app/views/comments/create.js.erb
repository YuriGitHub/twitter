
if("<%= @result %>" == 'success'){
	
	if("<%= @comment.commentable_type %>" == 'Post'){
		var commentsArea = $("[id=" + "<%= @comment.post_id %>" + "]").filter('.comments-area');
		commentsArea.append("<%= j render partial: '/comments/comment', locals:{comment_id: @comment.id} %>");
		var form = commentsArea.children('form')[0];
		$(form).children('textarea').val('');	
	
	}else if("<%= @comment.commentable_type %>" == 'Comment'){			
		var dialogArea = $('div[data-post-id=' + "<%= @comment.post_id %>"  + ']' +
		                  '[data-comment-id=' + "<%= @comment.commentable_id %>" + ']');
		dialogArea.append("<%= j render partial: '/comments/comment', locals:{comment_id: @comment.id} %>");		
		var form = dialogArea.children('form')[0];
		$(form).children('textarea').val('');
	}	

}


