<% @user %>
<% post = Post.find(post_id) %>
<% images = post.attachments.image %>


	<% i = 0 %>
	<% images.each do |image| %>
      <a  data-toggle="modal" href="#post-<%= post.id %>-modal" id="post-<%= post.id %>-thumb-image-<%= image.id %>">
			    <%=image_tag image.file.to_s,  class:'posts-thumb-image' %><br>
      </a>
		<% i += 1 %>
		<% break if i == 2 %>
	<% end %>
  <% if images.count > 2 %>
      <a  data-toggle="modal" href="#post-<%= post.id %>-modal">all...</a>
  <% end %>
  <%= render partial: 'attachments/post_images_modal_gallery', locals:{images: images, post: post, user: @user } %>



<script>
  $("#post-<%= post.id %>-modal").on("hidden.bs.modal", function () {
    var url =  '/users/' + <%= current_user.id %> + '/posts/' + <%= post.id %> + '/refresh_post_images_thumbs_block';
    $.ajax({
      url: url,
      type: "Patch"
    });
  });
</script>



	




