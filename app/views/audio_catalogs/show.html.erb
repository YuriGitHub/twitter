<h2><%= @audio_catalog.name %></h2>
<%= link_to 'All Audio Catalogs', user_audio_catalogs_path(@user), class:'btn btn-default' %>
<% if @user == current_user %>
    <%= link_to 'Edit Audio Catalog', edit_user_audio_catalog_path(@user, @audio_catalog), class:'btn btn-default' %>
    <%= link_to 'Delete Audio Catalog', user_audio_catalog_path(@user, @audio_catalog), method: :delete, class:'btn btn-default', data:{confirm: 'Are you  shure?'} %>

    <h2>Add Tracks To Catalog</h2>
    <%=form_for(@audio_catalog.tracks.build, url: user_add_track_to_catalog_path(@user, id: @audio_catalog), html:{:multipart => true, :class => 'dropzone', :id => 'file_upload_form'}) do |f|%>

        <div class="fallback">
          <%= f.file_field :file %>
          <%= f.submit "Upload" %>
        </div>
    <%end%>
    <script type="text/javascript" charset="utf-8">
      Dropzone.autoDiscover = false;
      $("#file_upload_form").dropzone({
        autoProcessQueue :true,
        maxFilesize: 700,
        acceptedFiles: "audio/*",
        paramName: "attachment[file]",
        addRemoveLinks: true
      });
    </script>
<% end %>

<h2><%= @audio_catalog.name %></h2>
<% @audio_catalog.tracks.each do |track| %>
  <div class="row audio-catalogs-track-cell"  >
    <div class="col-md-12">
        <br><%= audio_tag track.file.to_s, controls: true%>


        <% if @user == current_user %>
            <%= link_to 'Remove', user_remove_track_path(@user, track_id: track.id, id: @audio_catalog ), method: :delete %>
        <% end %>
    </div>
  </div>
    <div class="row">
      <div class="col-md-12">
        <%= track.file.to_s.split('/').last %>
      </div>
    </div>
<% end %>

