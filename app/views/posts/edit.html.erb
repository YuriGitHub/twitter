<link rel="stylesheet" href="/assets/show.css"/>

<div class="user-cont"> 
    <%= form_for @post, url: user_post_path(current_user, @post), method: :put do |f| %>
        <%= f.text_area :text %><br><br>
        <%= f.label "Upload video" %>
        <%= f.file_field :video %><br><br>
        <%= f.label "Upload music" %>
        <%= f.file_field :audio %><br><br>
        <%= f.submit "Edit post" %>
    <% end %>
    <%=render partial: 'images/create_images',locals:{post:@post}%>
</div>
