<%= form_for [@user, @album]  do |f| %>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class:'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit class:'btn btn-primary' %>
      <% if @album.id %>
          <%= link_to 'Cancel', user_photo_album_path(@user,@album), class:'btn btn-default' %>
      <% else %>
          <%= link_to 'Cancel', user_photo_albums_path(@user), class:'btn btn-default' %>
      <% end %>
    </div>
<% end %>

