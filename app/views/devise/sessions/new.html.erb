        <div class="col-xs-12 col-sm-12 col-lg-4">
          <div class="panel-primary">

            <div class="panel-body">

              <div class="col-xs-12 col-sm-12 col-md-12 login-box">
                <%= link_to "Facebook Login", user_facebook_omniauth_authorize_path, class: "btn facebook btn-block", role: "button" %>
                
                <%= link_to "Google Login", user_google_oauth2_omniauth_authorize_path, class: "btn google btn-block", role: "button" %>
              </div>

              <div class="col-xs-12 col-sm-12 col-md-12 login-box">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), role: "form") do |f| %>
                  <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                    <%= f.email_field :email, autofocus: true, placeholder: 'Email',class: 'form-control', id: 'email' %>
                  </div>

                  <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                    <%= f.password_field :password, autocomplete: "off", placeholder: 'password', class: 'form-control' %>
                  </div>


                  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br>
                  You do not have an account? <%= link_to "Sign up", new_registration_path(resource_name) %><br />
            </a>
              </div>
            </div>

            <div class="panel-footer">
              <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                  <div class="checkbox">
                    <label>
                      <% if devise_mapping.rememberable? -%>
                        <div class="form-group">
                          <%= f.check_box :remember_me %>
                          <%= f.label :remember_me %>
                        </div>
                      <% end %>
                    </label>

                  </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 text-right">
                  <%= f.submit "Log In", class: "btn btn-labeled btn-deffault" %>
                </div>
              </div>
            </div>
                <% end %>
          </div>
        </div>
      </div>
    </div>
